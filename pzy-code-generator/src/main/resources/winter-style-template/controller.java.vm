package ${package.Controller};

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;
import io.swagger.annotations.ApiImplicitParam;
import ${package.Service}.${table.serviceName};
import ${package.Entity}.*;
import org.pzy.opensource.domain.PageT;
import org.pzy.opensource.domain.ResultT;
import org.pzy.opensource.domain.vo.PageVO;

/**
 * ${entity} 的rest服务
 *
 * @author ${author}
 * @since ${date}
 */
@RestController
@RequestMapping("#if(${package.ModuleName})/${package.ModuleName}#end/#if(${controllerMappingHyphenStyle})${controllerMappingHyphen}#else${table.entityPath}#end")
@Api(tags = "${entity}的rest服务")
public class ${table.controllerName} {

    @Autowired
    private ${table.serviceName} service;

    @DeleteMapping("clear-cache")
    @ApiOperation(value = "${entity}清除缓存")
    public ResultT clearCache() {
        service.clearCache();
        return ResultT.success();
    }

    @GetMapping
    @ApiOperation(value = "${entity}分页查找")
    public ResultT<PageT<${entity}>> searchPage(PageVO page) {
        PageT<${entity}> pageResult = service.searchPageAndCache(page, null);
        return ResultT.success(pageResult);
    }

    @GetMapping("{id}")
    @ApiOperation(value = "${entity}详细查找")
    @ApiImplicitParam(name = "id", value = "唯一标识", dataType = "Long", paramType = "path", required = true, example = "1")
    public ResultT<${entity}> searchById(@PathVariable("id") Long id) {
        ${entity} result = service.getById(id);
        return ResultT.success(result);
    }

    @PostMapping
    @ApiOperation(value = "${entity}新增")
    public ResultT<Boolean> add(@RequestBody ${entity} dto) {
        service.addAndClearCache(dto);
        return ResultT.success(true);
    }

    @PutMapping
    @ApiOperation(value = "${entity}编辑")
    public ResultT<Boolean> edit(@RequestBody ${entity} dto) {
        service.editAndClearCache(dto);
        return ResultT.success();
    }

}